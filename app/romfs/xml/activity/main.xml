<brls:AppletFrame
    title="@i18n/nxgallery/title"
    iconInterpolation="linear"
    icon="@res/img/NXGallery_transparent.png" >

    <brls:Box
        width="100%"
        height="100%"
        axis="column"
        paddingTop="50"
        paddingBottom="50"
        paddingLeft="75"
        paddingRight="75" >

        <QrCode
            id="qrcode"
            width="auto"
            height="33%"
            pixelsPerModule="10"
            marginBottom="50" />

        <brls:Box
            width="100%"
            height="auto"
            axis="column" >

            <brls:Label
                width="100%"
                height="auto"
                text="@i18n/nxgallery/label/heading"
                fontSize="36"
                horizontalAlign="center" />

            <brls:Label
                width="auto"
                height="auto"
                horizontalAlign="center"
                text="@i18n/nxgallery/label/sub/a" />

        </brls:Box>

    </brls:Box>

</brls:AppletFrame>
