<brls:AppletFrame
    title="@i18n/nxgallery/title"
    iconInterpolation="linear"
    icon="@res/img/NXGallery_transparent.png" >

    <brls:Box
        width="100%"
        height="100%"
        axis="column"
        paddingTop="50"
        paddingBottom="50"
        paddingLeft="75"
        paddingRight="75" >

        <QrCode
            id="qrcode"
            width="auto"
            height="33%"
            pixelsPerModule="10"
            marginBottom="50" />

        <brls:Box
            width="100%"
            height="auto"
            axis="column" 
            justifyContent="center" >

            <brls:Label
                width="auto"
                height="auto"
                text="@i18n/nxgallery/label/heading"
                fontSize="36" />

            <brls:Box
                width="auto"
                height="auto"
                axis="row"
                justifyContent="center" >

                <brls:Label
                    width="auto"
                    height="auto"
                    text="@i18n/nxgallery/label/sub/a" />

                <brls:Box
                    width="auto"
                    height="auto"
                    paddingLeft="5"
                    paddingTop="5"
                    paddingBottom="5"
                    backgroundColor="#000000" 
                    borderColor="#aaaaaa"
                    borderThickness="1"
                    cornerRadius="4" >

                        <brls:Label
                            id="address"
                            width="auto"
                            height="auto"
                            textColor="#ffffff" />

                </brls:Box>

                <brls:Label
                    width="auto"
                    height="auto"
                    text="@i18n/nxgallery/label/sub/b" />

            </brls:Box>

        </brls:Box>

    </brls:Box>

</brls:AppletFrame>
