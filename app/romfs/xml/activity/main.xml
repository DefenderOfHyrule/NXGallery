    Made with love by Jonathan Verbeek (jverbeek.de)
-->

<!-- Main app frame -->
<brls:AppletFrame
    title="@i18n/nxgallery/title"
    iconInterpolation="linear"
    icon="@res/img/NXGallery_transparent.png" >

    <!-- Main content box -->
    <brls:Box
        width="100%"
        height="auto"
        axis="column"
        paddingLeft="75"
        paddingRight="75"
        justifyContent="center"
        alignItems="center" >

        <!-- QR code -->
        <QrCode
            id="qrcode"
            width="auto"
            height="33%"
            pixelsPerModule="10"
            marginBottom="50" />

        <!-- Container for text under QR code -->
        <brls:Box
            width="100%"
            height="auto"
            axis="column" 
            justifyContent="center"
            alignItems="center" >

            <!-- Heading -->
            <brls:Label
                width="auto"
                height="auto"
                text="@i18n/nxgallery/label/heading"
                fontSize="36" 
                marginBottom="20" />

            <!-- Subtext container -->
            <brls:Box
                width="auto"
                height="auto"
                axis="row"
                justifyContent="center" >

                <!-- Text before IP -->
                <brls:Label
                    width="auto"
                    height="auto"
                    text="@i18n/nxgallery/label/sub/a" />

                <!-- IP address container -->
                <brls:Box
                    width="auto"
                    height="auto"
                    paddingLeft="10"
                    paddingTop="5"
                    paddingBottom="5"
                    paddingRight="0"
                    marginLeft="5"
                    marginRight="7"
                    backgroundColor="#000000" 
                    borderColor="#aaaaaa"
                    borderThickness="1"
                    cornerRadius="4" >

                        <!-- IP address -->
                        <brls:Label
                            id="address"
                            width="auto"
                            height="auto"
                            textColor="#ffffff" />

                </brls:Box>

                <!-- Text after IP -->
                <brls:Label
                    width="auto"
                    height="auto"
                    text="@i18n/nxgallery/label/sub/b" />

            </brls:Box>

        </brls:Box>

    </brls:Box>

</brls:AppletFrame>
